#!/usr/bin/ruby
require File.dirname(__FILE__) + './lib/swiergot'

if __FILE__ == $0
  begin
    loop do
      @bot = Swiergot.new("swiergot", "zombocom")
      @bot.get_last_lokter_post
      puts "Tweeted.. waitning 10 minutes.."
      sleep(60*60*10) 
    end
  rescue Exception => e
     puts "Exception: #{e.message}"
     retry
  end
end

